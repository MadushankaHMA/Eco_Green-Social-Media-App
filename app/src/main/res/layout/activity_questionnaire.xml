<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context="com.social.ecogreen.QuestionnaireActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="Help us to  \nFind Your Interests"
        android:textColor="@color/colorGreen"
        android:layout_marginTop="78dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"/>

    <LinearLayout
        android:id="@+id/questionnaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select SPI Type"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="10dp"/>

        <Spinner
            android:id="@+id/spi_type_spinner"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:layout_height="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select City"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>

        <Spinner
            android:id="@+id/city_spinner"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:layout_height="50dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/questionnaireBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/btn_bg"
        android:text="Submit"
        android:textColor="#fff" />


</RelativeLayout>